{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "db:migrate": {
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "db:generate": {
      "env": ["DATABASE_URL"]
    },
    "db:studio": {
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["PORT"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start:prod": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["**/.env.*local", ".env"]
}
